    }
}

class StudentCouncilScholar extends Student implements Enrollment {
    public $position;
    public $organization;
    public $scholarshipProgram;
    public $scholarshipType;

    public function __construct($fullname, $course, $level, $status, $position, $organization, $scholarshipProgram, $scholarshipType){
        parent::__construct($fullname, $course, $level, $status);
        $this->position = $position;
        $this->organization = $organization;
        $this->scholarshipProgram = $scholarshipProgram;
        $this->scholarshipType = $scholarshipType;
    }

    public function enrollment(){
        return "You have been enrolled as a $this->status $this->course student, serving as $this->organization $this->position, with $this->scholarshipProgram $this->scholarshipType.";
    }
}
